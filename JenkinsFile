pipeline {
    agent {
        docker {
            image 'python:3.11-slim'
            args '--user root' // Exécuter le container en root
        }
    }

    environment {
        REPO_NAME = 'IA_DevSecOps'
        VENV_DIR = '/var/jenkins_home/venv' // Chemin vers le venv déjà créé manuellement
    }

    stages {
        stage('Verify Virtual Environment') {
            steps {
                script {
                    sh '''
                    if [ ! -d "${VENV_DIR}" ]; then
                        echo "❌ Erreur : L'environnement virtuel ${VENV_DIR} n'existe pas !"
                        exit 1
                    else
                        echo "✅ Virtual environment detected: ${VENV_DIR}"
                    fi
                    '''
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh '''
                    echo "▶ Installing missing dependencies in the existing venv..."
                    source ${VENV_DIR}/bin/activate
                    pip install --upgrade pip setuptools wheel

                    if [ -f ${REPO_NAME}/requirements.txt ]; then
                        echo "▶ Installing project dependencies..."
                        pip install --no-cache-dir -r ${REPO_NAME}/requirements.txt
                    else
                        echo "⚠️ Warning: No requirements.txt found!"
                    fi
                    '''
                }
            }
        }

        stage('Clone Repository') {
            steps {
                script {
                    sh '''
                    echo "▶ Cloning repository ${REPO_NAME}..."
                    rm -rf ${REPO_NAME} && git clone https://github.com/YoussefElbadouri/${REPO_NAME}.git
                    '''
                }
            }
        }

        stage('Execute Python Scripts') {
            steps {
                script {
                    sh '''
                    source ${VENV_DIR}/bin/activate

                    for script in extraction.py analyze_dockerfile.py analyze_terraform.py analyze_k8s.py; do
                        if [ -f "${REPO_NAME}/$script" ]; then
                            echo "▶ Running $script..."
                            python3 ${REPO_NAME}/$script
                        else
                            echo "⚠️ Warning: $script not found!"
                        fi
                    done
                    '''
                }
            }
        }
    }

    post {
        always {
            script {
                sh '''
                echo "▶ Cleaning up workspace..."
                rm -rf ${REPO_NAME}
                '''
            }
        }
    }
}
