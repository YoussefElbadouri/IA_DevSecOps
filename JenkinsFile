pipeline {
    agent {
        docker {
            image 'python:3.11'
            args '-u root' // Exécution en tant que root pour installer des paquets
        }
    }

    stages {
        stage('Cloner le dépôt') {
            steps {
                script {
                    sh '''
                    rm -rf IA_DevSecOps
                    git clone https://github.com/YoussefElbadouri/IA_DevSecOps.git
                    '''
                }
            }
        }

        stage('Configurer l\'environnement Python') {
            steps {
                script {
                    sh '''
                    apt-get update && apt-get install -y libssl-dev openssl
                    python3 -m ensurepip --default-pip
                    python3 -m venv venv
                    . venv/bin/activate
                    python3 -c "import ssl; print(ssl.OPENSSL_VERSION)" # Vérification du SSL
                    pip install --upgrade pip

                    # Vérification de l'existence de requirements.txt
                    if [ -f IA_DevSecOps/requirements.txt ]; then
                        pip install -r IA_DevSecOps/requirements.txt
                    else
                        echo "⚠️ requirements.txt introuvable, installation de requests..."
                        pip install requests
                    fi
                    '''
                }
            }
        }

        stage('Exécuter extraction.py') {
            steps {
                script {
                    sh '''
                    . venv/bin/activate
                    python3 IA_DevSecOps/extraction.py
                    '''
                }
            }
        }

        stage('Analyser Dockerfile') {
            steps {
                script {
                    sh '''
                    . venv/bin/activate
                    python3 IA_DevSecOps/analyze_dockerfile.py
                    '''
                }
            }
        }

        stage('Analyser Terraform') {
            steps {
                script {
                    sh '''
                    . venv/bin/activate
                    python3 IA_DevSecOps/analyze_terraform.py
                    '''
                }
            }
        }

        stage('Analyser Kubernetes YAML') {
            steps {
                script {
                    sh '''
                    . venv/bin/activate
                    python3 IA_DevSecOps/analyze_k8s.py
                    '''
                }
            }
        }
    }

    post {
        always {
            script {
                sh '''
                rm -rf IA_DevSecOps
                '''
            }
        }
    }
}
